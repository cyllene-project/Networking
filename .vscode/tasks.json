{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Swift build",
            "command": "swift build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
              "owner": "swift",
              "fileLocation": "absolute",
              "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
              }
            },
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            }
        },
        {
          "taskName": "Swift test",
          "command": "swift test",
          "type": "shell",
          "group": {
            "kind": "test",
            "isDefault": true
          },
          "problemMatcher": {
            "owner": "swift",
            "fileLocation": "absolute",
            "pattern": {
              "regexp": "^(.*):(\\d+):(?:(\\d+):)?\\s+(warning|error|note):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          },
          "presentation": {
              "reveal": "silent",
              "panel": "new"
          }
        }
    ]
}
